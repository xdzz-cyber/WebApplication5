@model IEnumerable<Category>

<h2>Categories</h2>


<div>
    <ul>
        @foreach (var item in Model)
        {
            <li>
                @item.Name  -
                <a asp-controller="Panel" asp-action="EditCategory" asp-route-id="@item.Id">Edit</a>
                <a asp-controller="Panel" asp-action="RemoveCategory" asp-route-id="@item.Id">Remove</a>
            </li>
        }
    </ul>
</div>