<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="Transportation site" />
    <meta name="keywords" content="Items, transportation, moving" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <environment include="Production">
        <link href="~/css/site.min.css" rel="stylesheet" />
    </environment>
    <environment include="Development">
        <link href="~/css/site.css" rel="stylesheet" />
    </environment>
    <title>Transportation-logistics system</title>
</head>
<body>
    <div class="mainContent">
        <header class="index-header">
            <nav class="index-nav navbar navbar-expand-lg navbar-light bg-light">
                <div class="container-fluid">
                    <a class="navbar-brand" href="#">Transport&logistics</a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse" id="navbarSupportedContent">
                        <ul class="navbar-nav me-auto mb-2 mb-lg-0">

                            <a aria-current="page" asp-controller="Home" asp-action="Index">Home</a>
                            <a aria-current="page" asp-controller="Basket" asp-action="Basket">Basket</a>

                            @if (User.Identity.IsAuthenticated)
                            {
                                <a asp-controller="Panel" asp-action="Index">Admin panel</a>
                                <a asp-controller="Panel" asp-action="EditItem">Create item</a>
                                <a asp-controller="Panel" asp-action="EditCategory">Create category</a>
                                <a asp-controller="Home" asp-action="Categories">Categories</a>
                                <a asp-controller="Auth" asp-action="Logout">Logout</a>
                            }
                            else
                            {
                                <a asp-controller="Auth" asp-action="Login">Sign in</a>
                                <a asp-controller="Auth" asp-action="Register">Register</a>
                            }
                        </ul>
                        <form class="d-flex">
                            <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
                            <button class="btn btn-outline-success" type="submit">Search</button>
                        </form>
                    </div>
                </div>
            </nav>
        </header>


        <main class="index-main">
            @RenderBody()
        </main>
    </div>
    

    <footer class="w-100 index-footer">
        <div class="container">
            <div class="row gx-5">
                <div class="col-md-12">
                    <p class="small text-muted">Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt.</p>
                    <p class="small text-muted mb-0">© Copyrights. All rights reserved.</p>
                </div>
            </div>
        </div>
    </footer>
 


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
    <script src="https://use.fontawesome.com/5d765c6722.js"></script>
</body>
</html>
